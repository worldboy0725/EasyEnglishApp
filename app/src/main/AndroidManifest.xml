<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nick_yen.memory_english_tool">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoomBasic">
        <activity android:name="com.example.nick_yen.memory_english_tool.MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"> <!-- 不讓鍵盤彈跳壓縮畫面-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>